{
	"name": "aspect",
	"version": "1.7.2",
	"description": "Aspect is a premium magazine Ghost theme with grid layout and functional sidebar.",
	"keywords": [
		"ghost",
		"theme",
		"ghost-theme"
	],
	"bugs": "https://github.com/priority-vision/aspect/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/priority-vision/aspect.git"
	},
	"author": {
		"name": "Priority Vision",
		"email": "support@priority.vision",
		"url": "https://www.priority.vision/"
	},
	"scripts": {
		"build": "rollup -c --environment BUILD:production",
		"build:prod": "npm run build && npm run translate && zippie aspect.zip",
		"dev": "rollup -c --environment BUILD:development -w",
		"pretest": "npm run build",
		"test": "gscan .",
		"test:ci": "gscan --fatal --verbose .",
		"translate": "gtl c",
		"postversion": "node scripts/update-version.mjs",
		"version:major": "npm version major --no-git-tag-version",
		"version:minor": "npm version minor --no-git-tag-version",
		"version:patch": "npm version patch --no-git-tag-version"
	},
	"config": {
		"card_assets": true,
		"custom": {
			"color_scheme": {
				"type": "select",
				"options": [
					"Light",
					"Dark",
					"System"
				],
				"default": "System"
			},
			"display_color_scheme_toggle": {
				"type": "boolean",
				"default": true
			},
			"dark_mode_logo": {
				"type": "image"
			},
			"dark_mode_accent_color": {
				"type": "color",
				"default": "#ffffff"
			},
			"foreground_accent_color": {
				"type": "color",
				"default": "#ffffff"
			},
			"dark_mode_foreground_accent_color": {
				"type": "color",
				"default": "#000000"
			},
			"sidebar_collapsed": {
				"type": "boolean",
				"default": false
			},
			"tags_list_sidebar": {
				"type": "text",
				"default": "4",
				"description": "Learn more here: https://www.priority.vision/docs/aspect/settings-sitewide/tags/"
			},
			"tags_page_displaying_tags": {
				"type": "text",
				"default": "-1",
				"description": "Learn more here: https://www.priority.vision/docs/aspect/settings-sitewide/tags/"
			},
			"post_card_style": {
				"type": "select",
				"options": [
					"Classic",
					"Classic Simple",
					"Overlay",
					"Overlay Simple",
					"List",
					"List Simple"
				],
				"default": "Classic"
			},
			"subscription_form_title": {
				"type": "text",
				"default": "Subscribe to Newsletter"
			},
			"subscription_form_description": {
				"type": "text",
				"default": "Join me on this exciting journey as we explore the boundless world of web design together."
			},
			"footer_copyright": {
				"type": "text"
			},
			"featured_section_style": {
				"type": "select",
				"options": [
					"Disabled",
					"Carousel",
					"Slider",
					"Grid",
					"Grid List"
				],
				"default": "Carousel",
				"group": "homepage"
			},
			"tags_list": {
				"type": "text",
				"default": "-1",
				"group": "homepage",
				"description": "Learn more here: https://www.priority.vision/docs/thesis/settings-sitewide/tags/"
			},
			"tags_list_sections": {
				"type": "text",
				"default": "4",
				"group": "homepage",
				"description": "Learn more here: https://www.priority.vision/docs/thesis/settings-sitewide/tags/"
			},
			"feature_image_aspect_ratio": {
				"type": "select",
				"options": [
					"auto",
					"1/1",
					"4/3",
					"3/2",
					"2/3",
					"16/9",
					"21/9",
					"9/16"
				],
				"default": "21/9",
				"group": "post"
			},
			"show_sidebar": {
				"type": "boolean",
				"default": true,
				"group": "post",
				"description": "Show the sidebar on the post content"
			}
		},
		"image_sizes": {
			"36": {
				"width": 36
			},
			"46": {
				"width": 46
			},
			"72": {
				"width": 72
			},
			"92": {
				"width": 92
			},
			"200": {
				"width": 200
			},
			"300": {
				"width": 300
			},
			"400": {
				"width": 400
			},
			"600": {
				"width": 600
			},
			"1200": {
				"width": 1200
			},
			"1600": {
				"width": 1600
			},
			"2000": {
				"width": 2000
			}
		},
		"posts_per_page": 12
	},
	"browserslist": [
		"defaults"
	],
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"focus-trap": "^7.6.4",
		"geist": "^1.3.1",
		"ivent": "^0.2.0",
		"motion": "^10.18.0",
		"swiper": "^11.1.4",
		"throttle-debounce": "^5.0.0",
		"tippy.js": "^6.3.7"
	},
	"devDependencies": {
		"@lehoczky/postcss-fluid": "^1.0.3",
		"@rollup/plugin-commonjs": "^28.0.3",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@vercel/style-guide": "^6.0.0",
		"esbuild": "^0.25.2",
		"eslint": "^8.57.0",
		"eslint-plugin-prettier": "^5.2.6",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"ghost-theme-locales": "^0.0.4",
		"glob": "^11.0.1",
		"gscan": "^4.49.5",
		"postcss": "^8.5.3",
		"postcss-import": "^16.1.0",
		"postcss-mixins": "^11.0.3",
		"postcss-nested": "^7.0.2",
		"postcss-preset-env": "^10.1.5",
		"prettier": "^3.5.3",
		"rollup": "^4.39.0",
		"rollup-plugin-copy": "^3.5.0",
		"rollup-plugin-esbuild": "^6.2.1",
		"rollup-plugin-livereload": "^2.0.5",
		"rollup-plugin-postcss": "^4.0.2",
		"stylelint": "^16.18.0",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-order": "^7.0.0",
		"zippie": "^0.0.1"
	},
	"optionalDependencies": {
		"pvs": "github:priority-vision/pvs#v1.6.11"
	},
	"engines": {
		"ghost": ">=5.0.0"
	},
	"demo": "https://aspect.priority.vision/",
	"docs": "https://www.priority.vision/docs/aspect/",
	"gpm": {
		"type": "theme",
		"categories": [
			"Blog",
			"Personal",
			"Minimal",
			"Newsletter"
		]
	},
	"screenshots": {
		"desktop": "assets/screenshot-desktop.jpg"
	}
}
