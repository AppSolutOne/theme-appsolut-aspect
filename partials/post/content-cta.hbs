{{#*inline "get-content-type"}}
	{{#is "post"}}
		{{> @partial-block content_type=(t "post")}}
	{{else}}
		{{> @partial-block content_type=(t "page")}}
	{{/is}}
{{/inline}}

<aside class="post-upgrade-cta container" id="post-upgrade-cta">
	{{#> "get-content-type"}}
		{{#has visibility="paid"}}
			<h2>{{t "This {content_type} is for paying subscribers only" content_type=content_type}}</h2>
		{{else has visibility="members"}}
			<h2>{{t "This {content_type} is for subscribers only" content_type=content_type}}</h2>
		{{else has visibility="tiers"}}
			<h2>{{t "This {content_type} is for subscribers on the {tiers} only" content_type=content_type tiers=(tiers prefix="" suffix="")}}</h2>
		{{/has}}
	{{/"get-content-type"}}

	{{!-- Description. --}}
	<p>{{t "Become a member now and have access to all posts and pages, enjoy exclusive content, and stay updated with constant updates."}}</p>

	{{#if @member}}
		<a class="button" href="#/portal/account/plans" data-portal="account/plans">{{t "Upgrade your account"}}</a>
	{{else}}
		<a
			class="button"
			{{#match tiers}}
				{{#match (t "/membership/") "!=" "false"}}
					href="{{t "/membership/"}}"
				{{else}}
					href="#/portal/signup"
				{{/match}}
			{{else match (t "/signup/") "!=" "false"}}
				href="{{t "/signup/"}}"
			{{else}}
				href="#/portal/signup"
			{{/match}}
		>
			{{~t "Become a member"~}}
		</a>
		<p>{{t "Already have an account?"}} <a href="{{#match (t "/signin/") "!=" "false"}}{{t "/signin/"}}{{else}}#/portal/signin{{/match}}">{{t "Sign in"}}</a></p>
	{{/if}}
</aside>