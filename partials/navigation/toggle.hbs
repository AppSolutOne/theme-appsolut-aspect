{{!--
	Toggle collapse or dropdown.

	Variables:
		- nav: data included in {{navigation}}.
		- item: data included in the link.
		- this: all data.
 --}}

{{!-- Dropdown. --}}
{{#if nav.dropdown}}
	{{> "navigation/link"}}
	<button
		aria-expanded="false"
		class="dropdown-toggle"
		aria-controls="{{concat "nav-dropdown-content-" item.slug "-" @index}}"
		aria-label="{{t "Show {label} dropdown navigation" label=item.label}}"
		id="{{concat "nav-dropdown-toggle-" item.slug "-" @index}}"
	></button>

{{!-- Collapse --}}
{{else}}
	<button
		aria-expanded="false"
		class="collapse-toggle nav-link nav-link-{{item.slug}}"
		aria-controls="{{concat "nav-collapse-content-" item.slug "-" @index}}"
		id="{{concat "nav-collapse-toggle-" item.slug "-" @index}}"
	>
		{{#if nav.show_icon}}{{> "icons-menu/all" slug=item.slug}}{{/if}}
		<span class="label">{{item.label}}</span>
	</button>

	{{!-- Dropdown. --}}
	{{#if nav.sidebar}}
		<button
			aria-expanded="false"
			class="navigation-dropdown-toggle"
			aria-controls="{{concat "nav-dropdown-content-" item.slug "-" @index}}"
			aria-label="{{t "Show {label} dropdown navigation" label=item.label}}"
			id="{{concat "nav-dropdown-toggle-" item.slug "-" @index}}"
		></button>
	{{/if}}
{{/if}}
